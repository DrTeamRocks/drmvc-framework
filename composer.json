{
  "name": "drmvc/framework",
  "type": "project",
  "description": "Simple and flexible PHP MVC Framework for PHP5 and PHP7",
  "homepage": "https://drmvc.com/",
  "license": "MIT",
  "keywords": [
    "mvc",
    "php",
    "framework",
    "php5",
    "php7"
  ],
  "authors": [
    {
      "name": "Paul Rock",
      "email": "paul@drteam.rocks",
      "homepage": "https://drteam.rocks/",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^5.5 || ^7.0",
    "drmvc/config": "^1.0"
  },
  "require-dev": {
    "drmvc/cli": "^0.1",
    "phpunit/phpunit": "~5.7"
  },
  "autoload": {
    "psr-4": {
      "DrMVC\\": "/src/"
    }
  },
  "suggest": {
    "drmvc/database": "Needed for working with the database",
    "drmvc/helpers": "Some useful classes for working with arrays and text"
  },
  "minimum-stability": "stable"
}
